<p id="notice"><%= notice %></p>

<h1>User Books</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Book Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_books.each do |user_task| %>
      <tr>
        <td><%= User.where(id: user_task.user_id).last.username %></td>
        <td><%= Task.where(id: user_task.book_id).last.title %></td>
        <td><%= link_to 'Show', user_task %></td>
        <td><%= link_to 'Edit', edit_user_book_path(user_task) %></td>
        <td><%= link_to 'Destroy', user_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

