<% content_for :title, "Editing user book" %>

<h1>Editing user book</h1>

<%= form_with(model: @user_book, local: true) do |form| %>
  <%= render "form", user_book: @user_book %>
  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, name: "user_book[user_id]" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Show this user book", @user_book %> |
  <%= link_to "Back to user books", user_books_path %>
</div>
