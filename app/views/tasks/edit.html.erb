<%= link_to('Back to Homepage', {controller: 'main', action: 'index'}) %><br />
<%= link_to("Back to Library", tasks_path, :class => 'back-link') %>

<div class="books edit">
  <h2>Edit Book</h2>

  <%= form_for(@task) do |f| %>
    <% # url: tasks_path, method: 'post' %>

    <table summary="Task form fields">
      <tr>
        <th>Title</th>
        <td><%= f.text_field(:title) %></td>
      </tr>
      <tr>
        <th>Author</th>
        <td><%= f.text_field(:author) %></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%= f.text_field(:price) %></td>
      </tr>
      <tr>
        <th>Date Published</th>
        <td><%= f.text_field(:published_date) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Book") %>
    </div>

  <% end %>
</div>
