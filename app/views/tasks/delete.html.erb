<%= link_to('Back to Homepage', {controller: 'main', action: 'index'}) %><br />
<%= link_to("Back to List", tasks_path, class: 'back-link') %>

<div class="book delete">
  <h2>Delete Book</h2>

  <%= form_for(@task, method: 'delete') do |f| %>
    

    <p>Are you sure you want to permanently delete this book?</p>
    <p><%= @task.title %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Book") %>
    </div>

  <% end %>
</div>
